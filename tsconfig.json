{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@baby-tracker/shared": ["./shared"],
      "@baby-tracker/shared/*": ["./shared/*"]
    }
  },
  "references": [
    { "path": "./web" },
    { "path": "./mobile" },
    { "path": "./shared" }
  ],
  "exclude": ["node_modules", "dist", ".next", ".expo"]
}
